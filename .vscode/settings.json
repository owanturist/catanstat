{
  "eslint.options": {
    "extensions": [".js", ".jsx", ".md", ".mdx", ".ts", ".tsx"]
  },
  "eslint.validate": [
    "markdown",
    "mdx",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "cSpell.enabled": true,
  "css.validate": false,
  "editor.quickSuggestions": {
    "strings": true
  },
  "tailwindCSS.experimental.classRegex": [
    ["\\bclass\\s+\\[([^)]*)\\]", "\"([^\"]*)\""], // TW.class
    ["\\bclass\\s+([^)]*)", "\"([^\"]*)\""] // Html.class
  ]
}
